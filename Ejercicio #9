//Ejercicio #9

int leds[] = {2, 3, 4, 5, 6, 7, 8};

void setup() {
  for (int i = 0; i < 7; i++) pinMode(leds[i], OUTPUT);
}

void loop() {
  for (int i = 0; i < 7; i++) digitalWrite(leds[i], HIGH), delay(100), digitalWrite(leds[i], LOW);
  for (int i = 5; i >= 0; i--) digitalWrite(leds[i], HIGH), delay(100), digitalWrite(leds[i], LOW);
}
